

@model WebApplication2.Models.Author

<h1>Create Author</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Deceased" /> @Html.DisplayNameFor(model => model.Deceased)
        </label>
    </div>

    <!-- ✅ File Upload Input -->
    <div class="form-group">
        <label>Upload Profile Picture</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
    </div>

    <div class="form-group">
        <label asp-for="Biography" class="control-label"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>